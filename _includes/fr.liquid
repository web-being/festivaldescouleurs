    <main style="background-color: {{background}}; background-image: url('{{'/assets' | url }}/{{ background }}');">
      <div class="container">
        {{ content }}
      </div>
    </main>
    <footer class="container">
      <nav>{% include 'icons' %}</nav>
      <nav>
        <a href="mailto:info@holimontreal.com">Nous contacter</a>
        <a href="/fr/terms-and-conditions">Termes et conditions</a>
        <a href="/fr/privacy-policy">Politique de confidentialité</a>
      </nav>
      <div id="outro">
        <img src="/assets/SAAQ.webp" width="160" />
        <img src="/assets/festival-of-india.webp" width="80" />
      </div>
      <small id="copyright">© 2024 par Festivals de l'Inde</small>
